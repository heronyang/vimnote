{
  "name": "vimnote",
  "version": "1.0.0",
  "description": "Take note with Vim.",
  "author": "Heron Yang <heron.yang.tw@gmail.com>",
  "main": "server.js",
  "scripts": {
    "precommit": "lint-staged"
  },
  "dependencies": {
    "ejs": "^3.0.1",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.1",
    "pretty-quick": "^2.0.1"
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/prettier/bin-prettier.js --tab-width 2 --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
